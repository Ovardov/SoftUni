<main>
  <h1>Delete Cube</h1>
  <div class="form">
    <form action='/delete/{{cube._id}}' method="POST">
      <label for="name">Name</label>
      <input disabled type="text" id="name" name="name" value="{{cube.name}}">
      <label for="name">Description</label>
      <textarea disabled id="name" name="description">{{cube.description}}</textarea>
      <label for="image">ImageUrl</label>
      <input disabled type="text" id="image" name="imageUrl" value="{{cube.imageUrl}}">
      <label for="difficulty">Difficulty</label>
      <select id="difficulty" name="difficultyLevel" disabled>
        {{#each options}}
        {{#if this.selected}}
        <option value="{{@index}}" selected>{{this.title}}</option>
        {{else}}
        <option value="{{@index}}">{{this.title}}</option>
        {{/if}}
        {{/each}}
      </select>
      <input type="submit" value="Delete">
    </form>
  </div>
</main>