<main class="mt-3 mb-5">
    <h1 class="text-center text-mishmash">Create Channel</h1>
    <hr class="hr-2 bg-mishmash w-50" />
    <form class="mx-auto w-50" method="post" action="/channel/create">
        <div class="form-group">
            <label for="name" class="text-mishmash">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Name..." name="name" value="{{channel.name}}">
        </div>
        <div class="form-group">
            <label for="description" class="text-mishmash">Description</label>
            <textarea class="form-control" id="description" rows="4" placeholder="Description..." name="description">{{channel.description}}</textarea>
        </div>
        <div class="channel-tags-holder mt-4">
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label for="name" class="text-mishmash">Tags</label>
                </div>
                <input type="text" class="form-control" id="tags" placeholder="Tag1, Tag2, Tag3..." name="tags" value="{{channel.tags}}">
            </div>
        </div>
        <h4 class="text-center text-mishmash">Channel Type</h4>
        <hr class="hr-2 bg-mishmash w-50 mt-4" />
        <div class="channel-type-holder mt-4 d-flex justify-content-around">
            {{#if options}}
                 {{#each options}}
                    {{#if this.selected}}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="type" id="{{this.title}}" value="{{this.title}}" checked>
                            <label class="form-check-label text-mishmash" for="{{this.title}}">{{this.title}}</label>
                        </div>
                    {{else}}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="type" id="{{this.title}}" value="{{this.title}}">
                            <label class="form-check-label text-mishmash" for="{{this.title}}">{{this.title}}</label>
                        </div>
                    {{/if}}
                {{/each}}
            {{else}}
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="type" id="type1" value="Game">
                    <label class="form-check-label text-mishmash" for="type1">Game</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="type" id="type2" value="Motivation">
                    <label class="form-check-label text-mishmash" for="type2">Motivation</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="type" id="type3" value="Lessons">
                    <label class="form-check-label text-mishmash" for="type3">Lessons</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="type" id="type4" value="Radio">
                    <label class="form-check-label text-mishmash" for="type4">Radio</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="type" id="type5" value="Other" checked>
                    <label class="form-check-label text-mishmash" for="type5">Other</label>
                </div>
            {{/if}}
        </div>
        <hr class="hr-2 bg-mishmash w-50 mt-4" />
        <div class="button-holder mt-2 d-flex justify-content-center">
            <button type="submit" class="btn bg-mishmash text-white">Create</button>
        </div>
    </form>
</main>